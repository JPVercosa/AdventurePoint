<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css">


<div class="row">
    <div class="col">
        <div class="card mb-3">
            <img src="<%= campground.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Informações sobre <%= campground.title%></h5>
                <p class="card-text"><%= campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location%></li>
                <li class="list-group-item">Adicionado por <%= campground.author.username %></li>
                <li class="list-group-item">R$<%= typeof campground.price == 'number' ? campground.price.toFixed(2):campground.price %>/noite</li>
            </ul>
            <% if(currentUser && campground.author.equals(currentUser._id)) {%>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Editar</a>
                <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Deletar</button>
                </form>
            </div>
            <% } %>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
        <% if (currentUser) {%> 
        <h2>Deixe sua avaliação:</h2>
        <form class="mb-3 validate-form" action="/campgrounds/<%=campground._id%>/reviews" method="POST" novalidate>
            <div class="mb-3">
                <label for="rating">Nota:</label>
                <fieldset class="starability-basic">
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
            </div>
            <div class="mb-3">
                <label for="body" class='form-label'>Comentário:</label>
                    <textarea name="review[body]" id="body" cols="30" rows="4" required class="form-control"></textarea>
                    <div class="invalid-feedback">
                        Por favor, adicione um texto a esse Comentário.
                    </div>
            </div>
            <button class="btn btn-success">Comentar</button>
        </form>
        <% } %>
        </div>
              
        <div class="col">
        <h2>Avaliações desse Ponto:</h2>
        <%for(let review of campground.reviews){ %> 
        <div  class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title mb-2 text-muted"><strong><%=review.author.username%></strong> disse:</h4>
                    <p class="card-text"><%=review.body%></p>
                    <h6 class="card-subtitle mb-2 text-muted">Nota:</h6>
                    <p class="starability-result" data-rating="<%=review.rating%>">
                      Rated: <%=review.rating%> stars
                    </p>
                    <% if(currentUser && review.author.equals(currentUser._id)) { %> 
                    <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Deletar</button>
                    </form>
                    <% } %> 
                </div>
        </div>
        <% } %> 
        </div>
</div>