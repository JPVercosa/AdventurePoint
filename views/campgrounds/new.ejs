<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Adicionar novo Ponto</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Insira o Título</label>
                <input class="form-control" type="text" id="title" name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Insira o Local</label>
                <input class="form-control" type="text" id="location" name="campground[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Insira a URL da imagem</label>
                <input class="form-control" type="text" id="image" name="campground[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Insira a descrição</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]"></textarea>
            </div>
            <div class="mb-3"><button class="btn btn-success">Adicionar</button></div>
        </form>

        <a href="/campgrounds" class="btn btn-danger">Voltar para todos os Pontos</a>
                
    </div>
</div>


